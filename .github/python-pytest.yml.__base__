name: Python PyTest - [[:TESTNAME:]]

on:
  push:
    branches: [ master, devel ]
  pull_request:
    branches: [ master, devel ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Login to Docker Hub
        uses: docker/login-action@v1
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_PASSWORD }}

      - name: Pull baseline for HybridQ
        run: |
          docker pull ${{ secrets.DOCKERHUB_USERNAME }}/hybridq-baseline:latest
          docker tag ${{ secrets.DOCKERHUB_USERNAME }}/hybridq-baseline:latest hybridq-baseline:latest

      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Build HybridQ container
        run: |
          docker-compose build --build-arg ARCH=x86-64 hybridq

      - name: Run tests
        run: |
          docker run --rm hybridq -c 'pip install pytest-random-order && \
            pytest -sv --random-order -k '[[:TESTNAME:]]__' /opt/hybridq/tests/tests.py'
